<aside>
  <div class="column-categori">カテゴリー</div>
  <div class="categori-list">
    <p><%= "カテゴリー" %></p>
  </div>
</aside>
<main>
  <div class="column-list">
    <div class="list">コラム一覧</div>
      <% @cooks.each do |cook| %>
        <div class="column-post">
          <div class="more">
            <span><%= image_tag 'arrow_top.png' %></span>
            <ul class="more_list">
              <li>
                <%= link_to '編集' %>
              </li>
              <li>
                <%= link_to '削除'%>
              </li>
            </ul>
          </div>
          <div class="write-user">
            <a href="">
              <%= cook.user.nickname %>
            </a>
          </div>
          <div class="column-title">
            <p><%= cook.title %></p>
          </div>
          <div class="column-text">
            <p><%= cook.text %></p>
          </div>
          <div class="column-genre">
            <p><%= cook.genre.name %></p>
          </div>
        </div>
      <% end %>
  </div>
</main>