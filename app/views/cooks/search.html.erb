<main>
  <div class="column-contents">
    <h2 class="title">検索結果</h2>
    <ul class="column-lists">
      <% @cooks.each do |cook| %>
          <li class="list">
            <div class="column-info">
              <%= link_to cook_path(cook.id) do %>
                <div class="column-image">
                  <%= image_tag cook.image, class: "images" if cook.image.attached? %>
                </div>
              <% end %>
              <div class="column-genre">
                <p><%= cook.category.name %></p>
              </div>
              <h3 class="column-title">
                <%= link_to cook.title, cook_path(cook.id), method: :get, class: "title-name" %>
              </h3>
            </div>
          </li>
      <% end %>
    </ul>
  </div>
</main>